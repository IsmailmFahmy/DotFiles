# SCRIPTS

control + alt + Delete
    ~/.config/rofi/powermenu

# F10
#     ~/.local/bin/mntdev


# slock & xset dpms force off; mpc pause; pauseallmpv

#########################

super + control + shift + z
    pkill -USR1 -x sxhkd && notify-send 'sxhkd' 'Reloaded config'

super + b
    firefox

super + u
    /usr/bin/rambox

super + o
    obsidian

super + shift + s
    screenshot

super + shift + e
    dolphin

super + r
    rofi -show drun

super + Return
    alacritty
    # kitty

super + shift + Return
    st
    
super + p
    kdeconnect-cli --name "Pixel 9" --send-clipboard && notify-send "Clipboard sent to Pixel 9"

super shift + p
    send_screenshot

super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'


alt + @Shift_L
    switch_layout

control + @Alt_L
    xdotool key shift+F10
    



# MEDIA KEYS
XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

XF86AudioRaiseVolume
    volume up

XF86AudioLowerVolume
    volume down


XF86AudioMute
    volume mute

XF86MonBrightnessUp
    backlight up

XF86MonBrightnessDown
    backlight down

XF86Sleep
    systemctl suspend
